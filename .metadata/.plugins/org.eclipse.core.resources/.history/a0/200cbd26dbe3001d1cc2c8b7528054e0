	<!-- 1~10까지의 합 -->
	<%
		int sum = 0;
		for(int i=1; i<=10; i++) {
			sum += i;
		}
	%>
	1~10까지의 합 : <%=sum %></p>
	
	<!-- * 프로그램을 하면서 브라우저로 출력하려면 
		 1) out.print(출력할 구문);
	 -->
	<%
		int sum2 = 0;
		for(int i=1; i<=10; i++) {
			if(i < 10)
				out.print(i + " + ");
			else
				out.print(i + " = ");
			
			sum2 += i;
		}
	%>
	<%=sum2 %>
